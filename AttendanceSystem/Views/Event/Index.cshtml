@model AttendanceSystem.ViewModels.Shared.PagedResult<AttendanceSystem.ViewModels.Event.EventSummaryViewModel>
@{
    ViewBag.Title = "Danh sách sự kiện";
}
<h2>@ViewBag.Title</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Tên sự kiện</th>
            <th>Mã</th>
            <th>Thời gian</th>
            <th>Trạng thái</th>
            <th>Tham dự</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var evt in Model.Items)
    {
        <tr>
            <td>@evt.Name</td>
            <td>@evt.Code</td>
            <td>@evt.StartDate.ToString("dd/MM/yyyy") - @evt.EndDate.ToString("dd/MM/yyyy")</td>
            <td>@evt.Status</td>
            <td>@evt.TotalParticipants</td>
            <td>@Html.ActionLink("Chi tiết", "Details", new { id = evt.EventId })</td>
        </tr>
    }
    </tbody>
</table>
