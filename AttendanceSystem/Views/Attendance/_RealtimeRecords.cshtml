@model AttendanceSystem.ViewModels.Attendance.AttendanceRealtimeViewModel
<div class="panel panel-default">
    <div class="panel-heading">
        <strong>@Model.Title</strong>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Họ tên</th>
                <th>Trạng thái</th>
                <th>Phương thức</th>
                <th>Check-in</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var record in Model.Records)
        {
            <tr>
                <td>@record.UserName</td>
                <td>@record.Status</td>
                <td>@record.Method</td>
                <td>@record.CheckInTime.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        }
        </tbody>
    </table>
</div>
